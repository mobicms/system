{
    "name": "mobicms/system",
    "description": "mobiCMS core framework",
    "type": "library",
    "license": "GPL-3.0-only",
    "homepage": "https://mobicms.org",
    "keywords": [
        "mobicms"
    ],
    "authors": [
        {
            "name": "Oleg Kasyanov",
            "role": "Team Lead, Developer",
            "homepage": "https://github.com/batumibiz",
            "email": "oleg@batumi.org"
        },
        {
            "name": "mobiCMS Contributors",
            "homepage": "https://github.com/mobicms/system/graphs/contributors"
        }
    ],
    "support": {
        "source": "https://github.com/mobicms/system",
        "issues": "https://github.com/mobicms/system/issues"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "~8.4",
        "ext-pdo": "*",
        "mobicms/contract": "dev-main"
    },
    "require-dev": {
        "mobicms/testutils": "^3.0",
        "phpunit/phpunit": "^12.4",
        "slevomat/coding-standard": "^8.22",
        "squizlabs/php_codesniffer": "^3.13",
        "vimeo/psalm": "^6.13"
    },
    "autoload": {
        "psr-4": {
            "Mobicms\\System\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MobicmsTest\\": "tests/unit/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --no-diff --show-info=true",
        "test": "phpunit --colors=always",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --colors=always --coverage-clover clover.xml --log-junit report.xml"
        ]
    }
}
